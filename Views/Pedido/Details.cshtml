@model ModuloProduccionPiscina.Models.Pedido

@{
    ViewData["Title"] = "Detalle del Pedido";
}

<h2>Detalle del Pedido</h2>

<div class="mb-3">
    <strong>Fecha de consumo:</strong> @Model.FechaConsumo.ToShortDateString()<br />
    <strong>Piscina:</strong> @Model.Piscina?.Nombre<br />
    <strong>Registrado por:</strong> @Model.UsuarioId
</div>

<h4>Productos consumidos</h4>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var detalle in Model.Detalles)
    {
        <tr>
            <td>@detalle.Producto?.Nombre</td>
            <td>@detalle.Cantidad</td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Volver</a>

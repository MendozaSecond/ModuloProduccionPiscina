@model List<ModuloProduccionPiscina.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h2>Pedidos registrados</h2>
<div class="mb-3 d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-success">+ Nuevo Pedido</a>
    <input type="text" id="buscarPedidos" class="form-control w-25" placeholder="Buscar..." onkeyup="filtrarTabla()" />
</div>

<table class="table table-striped" id="tablaPedidos">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Piscina</th>
            <th>Registrado por</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var pedido in Model)
    {
        <tr>
            <td>@pedido.FechaConsumo.ToShortDateString()</td>
            <td>@pedido.Piscina?.Nombre</td>
            <td>@pedido.UsuarioId</td>
            <td>
                <a asp-action="Details" asp-route-id="@pedido.IdPedido" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Edit" asp-route-id="@pedido.IdPedido" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Anular" asp-route-id="@pedido.IdPedido" class="btn btn-sm btn-danger">Anular</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@section Scripts {
    <script>
        function filtrarTabla() {
            const input = document.getElementById('buscarPedidos').value.toLowerCase();
            const filas = document.querySelectorAll('#tablaPedidos tbody tr');

            filas.forEach(fila => {
                const textoFila = fila.innerText.toLowerCase();
                fila.style.display = textoFila.includes(input) ? '' : 'none';
            });
        }
    </script>
}